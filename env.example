# Moneturn Book Library - Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration (used by backend)
# Prisma Accelerate connection string (with connection pooling)
# Replace with your actual Prisma Accelerate URL
DATABASE_URL="prisma+postgres://localhost:51213/?api_key=your_api_key_here"

# Backend Configuration
# Port for the Fastify server
PORT=3001

# Node Environment
NODE_ENV=development

# Frontend Configuration
# API base URL for frontend requests
VITE_API_BASE_URL=http://localhost:3001
